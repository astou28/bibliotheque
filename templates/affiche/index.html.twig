{% extends "base.html.twig" %}
{% block stylesheets %}
<link rel="stylesheet" href="/css/style.css">


{% endblock %}

{% block title %}MA BIBLIOTHEQUE{% endblock %}

{% block body %}
<h1>Livre disponible :</h1>
    {% if livres %}
    <table id="livres" class="table table-striped">
    <thead>
        <tr> 
            <th>Titre :</th>
            <th>Annee publication :</th>
            <th>Nombre de page :</th>
            <th>Genre du livre :</th>
            <th>Auteur du livre :</th>
            <th>Actions :</th>


        </tr>
    </thead>
    <tbody> 
        {% for livre in livres %}
            <tr>
                <td> {{livre.titre}} </td>
            <td>
            
            {{livre.annee}}
            </td>

            <td>
            {{livre.NbrPage}}
            </td>

            <td>
            {{livre.idGenre}}
            </td>

            <td>
            {{livre.IdAuteur}}</td>
            <td>
            <a href="/affiche/{{ livre.idLivre }}" class='btn btn-primary'>afficher</a>

            </td>
            <td>
                <a href=" " class='btn btn-primary'>editer</a>
            </td>
            <td>
                <a href="#" class='btn btn-danger delete-livre' data-id="{{ livre.idLivre}}">supprimer</a>
            </td>

            </tr>
        
        {% endfor %}
    </tbody>
	</table>


    {% else %}
        <p>vous n'avez pas de livre enregistrer.</p>
    {% endif %}
    


{% endblock %}
{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/js/script.js"></script>
{% endblock %}